{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "importHelpers": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "baseUrl": "./",
      "strict": true,
      "paths": {
        "*": ["node_modules/*"]
      },
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
    },
    "include": [
      "app/**/*"
    ],
  }
  